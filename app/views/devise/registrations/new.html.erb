<div class="d-flex justify-content-center align-items-center vh-100">


  <div class="d-flex justify-content-center">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "w-100" }) do |f| %>
      <%= f.error_notification %>

      <div class="card p-4 mb-3" style="width: 24rem;">
        <div class="card-body">
          <h1 class="text-center" style="font-family: 'Dancing Script', cursive; font-weight: 700; font-size: 40px; margin-bottom: 12px;">Instaclone</h1>
          <p class="text-center text-secondary fs-6 fw-semibold" >Sign up to see photos and videos from your friends</p>

          <div class="mb-3">
            <%= f.input :username,
                        required: true,
                        autofocus: true,
                        placeholder: "username",
                        input_html: { class: "form-control" },
                        label: false %>
          </div>

          <div class="mb-3">
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        placeholder: "email",
                        input_html: { class: "form-control" },
                        label: false %>
          </div>

          <div class="mb-3">
            <%= f.input :password,
                        required: true,
                        placeholder: "Password",
                        # hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password", class: "form-control" },
                        label: false %>
          </div>

          <div class="mb-3">
            <%= f.input :password_confirmation,
                        required: true,
                        placeholder: "Confirm password",
                        input_html: { autocomplete: "new-password", class: "form-control" },
                        label: false %>
          </div>

          <div class="mb-3">
            <%= f.button :submit, "Sign up", class: "btn btn-primary insta-primary w-100" %>
          </div>
        </div>
      </div>
    <div class="card py-1" style="width: 24rem;">
      <div class="card-body" >
        <p class="mb-0 fs-6 text-center">Already have an account? <%= link_to "Log in", root_path, class: "remove-text-decoration" %></p>
      </div>
    </div>
    <% end %>
  </div>
</div>
