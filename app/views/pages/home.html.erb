<% if user_signed_in? %>
  <%= link_to "log out", destroy_user_session_path, data: { "turbo-metod": "delete"} %>
<% end %>


<div class="d-flex justify-content-center align-items-center vh-100">
  <div>
    <div class="card p-4 mb-3" style="width: 24rem;">
      <div class="card-body">
        <h1 class="text-center" style="font-family: 'Dancing Script', cursive; font-weight: 700; font-size: 40px; margin-bottom: 12px;">Instaclone</h1>

        <div class="d-flex justify-content-center">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "w-100" }) do |f| %>
            <div class="mb-3">
              <%= f.text_field :login, placeholder: "Username or email", autofocus: true, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.password_field :password, placeholder: "Password", autocomplete: "current-password", class: "form-control" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-check mb-3">
                <%= f.check_box :remember_me, class:"form-check-input" %>
                <%= f.label :remember_me, class:"form-check-label"%>
              </div>
            <% end %>

            <div class="mb-3">
              <%= f.submit "Log in", class:"btn btn-primary insta-primary w-100" %>
            </div>
          <% end %>
        </div>

        <hr>
        <div class="d-flex justify-content-center">
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: "remove-text-decoration" %>
        </div>
      </div>
    </div>

    <div class="card py-1" style="width: 24rem;">
      <div class="card-body" >
        <p class="mb-0 fs-6 text-center">Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name), class: "remove-text-decoration" %></p>
      </div>
    </div>
  </div>

</div>
